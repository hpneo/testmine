<h3>
  <% if @title.present? %>
    <%= @title %>
  <% else %>
    <% if @test_suite.persisted? %>
      Edit Test Suite
    <% else %>
      New Test Suite
    <% end %>
  <% end %>
</h3>
<%
  options = { remote: true }
  if @test_suite.persisted?
    options[:url] = test_suite_path(@project, @test_suite)
  else
    options[:url] = new_test_suite_path(@project)
  end
%>
<%= labelled_form_for @test_suite, options do |f| %>
  <p>
    <%= f.text_field :name, label: 'Name' %>
  </p>
  <p>
    <%= f.text_area :summary, label: 'Details', rows: 5 %>
  </p>
  
  <%= f.hidden_field :project_id %>
  <%= submit_tag 'Save' %>
  <input type="reset" value="Cancelar" class="close-modal" />
<% end %>