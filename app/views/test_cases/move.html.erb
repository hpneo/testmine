<h3>Move Test Case</h3>
<%= labelled_form_for @test_suite_test_case, url: test_suite_test_case_path(@project, @test_suite_test_case.id), remote: true do |f| %>
  <p>
    <%= f.select :test_suite_id, options_from_collection_for_select(TestSuite.all, :id, :name, @test_suite_test_case.test_suite_id), { label: 'Select Test Suite' }, { size: 3 } %>
  </p>
  <input type="hidden" name="previous_test_suite_id" value="<%= @test_suite_test_case.test_suite_id %>" />
  <%= f.submit 'Move' %>
  <input type="reset" value="Cancelar" class="close-modal" />
<% end %>